---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import rightArrowIcon from "../assets/ant-design_right-outlined.svg";

let articles = [];

const response = await fetch(
  "https://dev.to/api/articles?username=pupunhacode"
);
articles = await response.json();

interface Article {
  id: number;
  title: string;
  description: string;
  cover_image: string;
  url: string;
  published_at: string;
  reading_time_minutes: number;
  public_reactions_count: number;
  user: {
    name: string;
  };
  tag_list: string[];
}
---

<Layout
  title="Blog - PupunhaCode"
  description="Leia artigos sobre tecnologia, desenvolvimento e a comunidade tech do Amapá no blog da PupunhaCode."
  keywords={[
    "blog tech amapá",
    "artigos desenvolvimento",
    "pupunha code blog",
    "tecnologia amazônia",
  ]}
>
  <div class="bg-neutral-900 min-h-screen pt-16">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1
            class="text-3xl sm:text-4xl font-bold mb-6 text-white font-azeret"
          >
            <span class="text-secondary">
              <Image
                src={rightArrowIcon}
                alt="Seta apontando para a direita"
                width={32}
                height={32}
                class="inline-block mr-2"
              />
            </span>
            Blog
          </h1>
          <p class="text-xl text-neutral-300 max-w-2xl mx-auto">
            Leia artigos sobre tecnologia, desenvolvimento e a comunidade tech
            do Amapá no blog da PupunhaCode.
          </p>

          <div class="grid gap-8 md:grid-cols-2 lg:gap-10">
            {
              articles.length === 0 ? (
                <div class="col-span-full text-center py-16">
                  <svg
                    class="w-16 h-16 mx-auto text-neutral-600 mb-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                    />
                  </svg>
                  <p class="text-neutral-400 text-lg">
                    Nenhum artigo encontrado
                  </p>
                  <p class="text-neutral-500 text-sm mt-2">
                    Novos artigos serão publicados em breve
                  </p>
                </div>
              ) : (
                articles.map((article: Article) => (
                  <article class="group bg-neutral-800/50 backdrop-blur-sm rounded-xl overflow-hidden border border-neutral-700/50 hover:border-secondary/50 transition-all duration-300 hover:shadow-lg hover:shadow-secondary/10 hover:-translate-y-1">
                    {/* Cover Image */}
                    {article.cover_image && (
                      <div class="relative overflow-hidden aspect-video bg-neutral-700">
                        <Image
                          src={article.cover_image}
                          alt={article.title}
                          loading="lazy"
                          width={800}
                          height={450}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                    )}

                    {/* Content */}
                    <div class="p-6">
                      {/* Tags */}
                      {article.tag_list && article.tag_list.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-3">
                          {article.tag_list.slice(0, 3).map((tag: string) => (
                            <span class="text-xs px-2 py-1 bg-secondary/10 text-secondary rounded-full">
                              #{tag}
                            </span>
                          ))}
                        </div>
                      )}

                      {/* Title */}
                      <h2 class="text-xl font-bold text-white font-azeret mb-3 line-clamp-2">
                        <a
                          href={article.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="hover:text-secondary transition-colors text-white no-underline"
                        >
                          {article.title}
                        </a>
                      </h2>

                      {/* Description */}
                      {article.description && (
                        <p class="text-neutral-400 mb-4 line-clamp-3 leading-relaxed">
                          {article.description}
                        </p>
                      )}

                      {/* Meta Information */}
                      <div class="flex items-center justify-between text-sm text-neutral-500 pt-4 border-t border-neutral-700/50">
                        <div class="flex items-center gap-4">
                          <span>
                            <span class="sr-only">Autor:</span>{" "}
                            {article.user.name}
                          </span>

                          <span class="flex items-center gap-1">
                            <svg
                              class="w-4 h-4"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                              />
                            </svg>
                            <time datetime={article.published_at}>
                              {new Date(
                                article.published_at
                              ).toLocaleDateString("pt-BR", {
                                day: "numeric",
                                month: "short",
                                year: "numeric",
                              })}
                            </time>
                          </span>

                          {article.reading_time_minutes && (
                            <span class="flex items-center gap-1">
                              <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                />
                              </svg>
                              {article.reading_time_minutes} min
                            </span>
                          )}
                        </div>

                        <a
                          href={article.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="text-secondary hover:text-primary transition-colors font-medium inline-flex items-center gap-1 group/link"
                          aria-label={`Ler artigo: ${article.title}`}
                        >
                          Ler artigo
                          <svg
                            class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M14 5l7 7m0 0l-7 7m7-7H3"
                            />
                          </svg>
                        </a>
                      </div>
                    </div>
                  </article>
                ))
              )
            }
          </div>
        </div>
      </div>
    </div>

    <style>
      /* Line clamp utilities for older browsers */
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </div></Layout
>
