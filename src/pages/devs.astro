---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { devs } from '../../devs-amapa';
import rightArrowIcon from '../assets/ant-design_right-outlined.svg';
import { Image } from 'astro:assets';
import { DISCORD_URL } from '../constants/site';
---

<Layout
  title="Devs - PupunhaCode"
  description="Conheça os desenvolvedores do Amapá que fazem parte da comunidade PupunhaCode. Conecte-se com outros devs locais."
  keywords={['desenvolvedores amapá', 'devs pupunha code', 'programadores macapá', 'comunidade tech amapá']}
>
  <div class="bg-neutral-900 min-h-screen pt-16">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1 class="text-3xl sm:text-4xl font-bold mb-6 text-white font-azeret">
            <span class="text-secondary">
              <Image src={rightArrowIcon} alt="Seta apontando para a direita" width={32} height={32} class="inline-block mr-2" />
            </span>
            Devs do Amapá
          </h1>
          <p class="text-neutral-300 text-lg max-w-2xl mx-auto">
            Conheça os desenvolvedores do Amapá que estão contribuindo para a comunidade PupunhaCode!
          </p>
        </div>

        <!-- Developers Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
          {devs.map((dev) => (
            <div class="bg-neutral-800 border border-neutral-700 rounded-lg p-6 hover:border-secondary/50 transition-colors duration-300 group">
              <div class="flex items-center space-x-4 mb-4">
                <Image
                  src={`${dev.github}.png`}
                  alt={`${dev.name}'s GitHub avatar`}
                  width="60"
                  height="60"
                  class="rounded-full ring-2 ring-neutral-600 group-hover:ring-secondary/50 transition-colors duration-300"
                />
                <div>
                  <h3 class="text-lg font-bold text-white font-azeret">{dev.name}</h3>
                </div>
              </div>

              <div>
                 <p class="text-sm text-white">
                    {dev.bio}
                  </p>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2 text-neutral-400">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                  </svg>
                  <span class="text-xs">GitHub</span>
                </div>
                
                <Button 
                  as="a" 
                  href={dev.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  variant="ghost" 
                  size="sm"
                  class="text-secondary hover:bg-secondary/10 no-underline"
                >
                  Ver
                </Button>
              </div>
            </div>
          ))}
        </div>

      </div>
    </div>
  </div>
</Layout>