---
import Logo from './Logo.astro';
import { DISCORD_URL, GITHUB_URL } from '../constants/site';
import { Icon } from 'astro-icon/components';
import discordIcon from '../icons/discord.svg';
import githubIcon from '../icons/github.svg';
import instagramIcon from '../icons/instagram.svg';
import devtoIcon from '../icons/devto.svg';

const currentYear = new Date().getFullYear();

const navigation = {
  main: [
    { name: 'Quem somos', href: '/quem-somos' },
    { name: 'Eventos e Meetups', href: '/eventos' },
    { name: 'Devs', href: '/devs' },
    { name: 'Como participar', href: '/como-participar' },
    { name: 'Contato', href: '/contato' },
    { name: 'Blog', href: '/blog' }
  ],
  social: [
    {
      name: 'Discord',
      href: DISCORD_URL,
      icon: 'discord'
    },
    {
      name: 'GitHub',
      href: GITHUB_URL,
      icon: 'github'
    },
    {
      name: 'Instagram',
      href: 'https://instagram.com/pupunhacode',
      icon: 'instagram'
    },
    {
      name: 'Dev.to',
      href: 'https://dev.to/pupunhacode',
      icon: 'devto'
    }
  ]
};
---

<footer class="bg-neutral-900 border-t border-neutral-800">
  <div class="container mx-auto px-4 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <Logo as="div" class="text-2xl mb-4" />
        <p class="text-neutral-400 mb-6 max-w-md leading-relaxed">
          Comunidade de desenvolvedores do Amapá, Brasil. Conectando devs locais, compartilhando conhecimento e fortalecendo o ecossistema tech da Amazônia.
        </p>
        <div class="flex space-x-4">
          {navigation.social.map((item) => (
            <a
              href={item.href}
              class="text-neutral-400 hover:text-secondary transition-colors duration-200"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Seguir no ${item.name}`}
            >
              <Icon name={item.icon} class="h-6 w-6 text-secondary  rounded-full p-1" />
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation Links -->
      <div>
        <h3 class="text-white font-azeret font-bold mb-4">Navegação</h3>
        <ul class="space-y-3 list-none">
          {navigation.main.map((item) => (
            <li 
              class="list-none"
            >
              <a
                href={item.href}
                class="text-neutral-400 hover:text-white transition-colors duration-200"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Section -->
      <div>
        <h3 class="text-white font-azeret font-bold mb-4">Contato</h3>
        <div class="space-y-3">
          <div>
            <p class="text-neutral-400">Email</p>
            <a
              href="mailto:lgoesmontes@gmail.com"
              class="text-white hover:text-secondary transition-colors duration-200"
            >
              lgoesmontes@gmail.com
            </a>
          </div>
          <div>
            <p class="text-neutral-400">Discord</p>
            <a
              href={DISCORD_URL}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-secondary transition-colors duration-200"
            >
              Servidor da Comunidade
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-neutral-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-neutral-400 text-sm">
          © {currentYear} PupunhaCode. Feito com ❤️ pela comunidade.
        </p>
      </div>
    </div>
  </div>
</footer>